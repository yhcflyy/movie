
.album-container {
	margin: 0rpx 15rpx 0rpx 15rpx;
	display: grid;
	grid-template-columns: repeat(auto-fill, 230rpx);
	grid-auto-rows: 350rpx;
	row-gap: 15rpx;
	-webkit-column-gap: 15rpx;
	        column-gap: 15rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 15rpx;
}
.album-item {
	border-radius: 10rpx;
	overflow: hidden;
	/* 修复wx圆角无效果 */
	-webkit-transform: translateY(0);
	        transform: translateY(0);
	background-color: #C8C7CC;
}
.album-image {
	width: 100%;
	height: 100%;
}
.album-top {
	/* 	margin-left: 15rpx;
	margin-right: 15rpx;
	margin-bottom: 15rpx; */
	margin: 15rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	/* height: 60rpx; */
}
.video-bottom {
	position: absolute;
	bottom: 0rpx;
	left: 0rpx;
	width: 100%;
	height: 60rpx;
	/* background-color: #4CD964; */
	background-image: -webkit-gradient(linear, left bottom, left top, from(#00000088), to(transparent));
	background-image: -webkit-linear-gradient(bottom, #00000088, transparent);
	background-image: linear-gradient(to top, #00000088, transparent);
}
.video-bottom-text {
	position: absolute;
	bottom: 10rpx;
	left: 15rpx;
	right: 15rpx;
	color: white;
	font-size: 12px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

